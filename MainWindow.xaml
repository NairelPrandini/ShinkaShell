<Window 
    x:Class="ShinkaShell.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:ShinkaShell"
    mc:Ignorable="d"
    Title="MainWindow"
    WindowStyle="None"
    ResizeMode="NoResize"
    Height="450"
    Width="450"
    Topmost="True"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterScreen"
    AllowsTransparency="True"
    Background="Transparent"
    Loaded="Window_Loaded"
    >        
    <Grid>

        <TextBox 
            x:Name="DebugTextBox"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            Height="100"
            Margin="10"
            TextWrapping="Wrap"
            AcceptsReturn="True"
            IsReadOnly="True"
            Background="Black"
            Foreground="White"
            FontFamily="Consolas"
            Visibility="Collapsed"
            FontSize="12"
        />

        <Image 
            x:Name="CharacterImage"
            Source="resources/sprites/character.png"
            Width="200"
            Height="200"
            RenderTransformOrigin="0,1"
            Stretch="Uniform"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            MouseDown="Character_MouseDown"
            MouseUp="Character_MouseUp"
            MouseMove="Character_MouseMove"
        />
    </Grid>
</Window>
